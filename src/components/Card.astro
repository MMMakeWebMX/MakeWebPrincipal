---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---
<div class="flex flex-col rounded-lg text-start  bg-[#422f4b] bg-opacity-90 shadow-lg p-4 w-40 md:w-80 h-40 md:h-80">
	
	<a href={href} class="bg-[#e92210] bg-opacity-90 rounded-lg p-4 hover:-translate-y-1 hover:delay-150 hover:scale-110 hover:bg-[#6d2b25]">
		<h2 class="text-2xl font-bold text-white">
			{title}
			<span>&rarr;</span>
		</h2>
		
	</a>
	<div set:html={body}></div>
	
</div>

